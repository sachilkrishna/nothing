
@{
    ViewBag.Title = "AdminLandingPage";
}


<div class="container">
    <h2>AdminLandingPage</h2>
    <div >
        @Html.ActionLink("Front Page", "Index", "Home", new { }, new { @class = "float-xl-none" })
        @Html.ActionLink("Sign Out", "SignOut", "Login", new { }, new {@class= "float-xl-right" })
    </div>
    <hr />
    <div class="container">
        <table class="table" id="UserDetailsTable">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email ID</th>
                    <th>Role</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(function () {
        $.getJSON("/Landing/GetUsersDetails", function (data) {
            $("#UserDetailsTable").DataTable({
                "data": data,
                "scrollY": 300,
                "columns": [
                    { "data": "FirstName" },
                    { "data": "LastName" },
                    { "data": "EmailId" },
                    { "data": "UserType" }
                ]
            })

        })
    })


</script>