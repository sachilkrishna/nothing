@model Prac.Models.User
@{
    ViewBag.Title = "SignIn";
}



<div class="row">

    <div class="col-7">

        <div>
            <h6 class="btn btn-outline-dark justify-content-xl-start" onclick="window.history.back()">back</h6>
        </div>
        <H1 class="d-flex justify-content-center box1 min-vh-100 ">Sign in</H1>
    </div>
    <div class="d-flex justify-content-lg-start box1 min-vh-100 col-5 form-group">
        @*<form action="SignIn" method="post" id="SignInForm">*@
            @using (Html.BeginForm("SignIn", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, htmlAttributes: new { @id = "SignInForm", @name = "SignInForm" }))
            {
                <div class="form-group ">
                    <h6 class="text-danger">@ViewBag.LoginText</h6>
                </div>
                <div class="form-group ">
                    <div class="font-weight-bold">  @Html.DisplayNameFor(model => model.EmailId)</div>
                    @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control " })
                </div>

                <div class="form-group ">
                    <div class="font-weight-bold"> @Html.DisplayNameFor(model => model.Password)</div>
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control ", @type = "password" })
                </div>

                <div class="form-group ">
                    <input class="form-control btn btn-dark" type="submit" name="submit" value="Submit" />
                </div>
            }

        @*</form>*@
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script type="text/javascript">

    $("#SignInForm").validate({
        rules: {
            Password: {
                required: true,
                minlength: 6,
                maxlength: 10,

            },

            EmailId: {
                required: true,
            }
            ,


        },
        messages: {
            Password: {
                required: "the password is required (min length:6, max length:10)"

            },
            EmailId: {
                required: "Enter valid email ID.",
            }
        }

    });
</script>


<style>
    form .error {
        color: red;
    }
</style>