@*@model Prac.Models.User*@


@{
    ViewBag.Title = "SignUp";
}



<div>
    <h6 class="btn btn-outline-dark" onclick="window.history.back()">back</h6>
</div>
<div class="row">

    <div class="d-flex justify-content-center box1 min-vh-100 col-7">
        <H1>SignUp</H1>
    </div>
    <div class="d-flex justify-content-lg-start box1 min-vh-100 col-5 form-group">
        <form action="SignUp" method="post" id="SignUpForm">

            <div class="form-group">
                <label class="font-weight-bold"> First Name </label>
                <input class="form-control d-xl-table-cell" required type="text" name="fname" value="" id="fname" />
            </div>
            <div class="form-group ">
                <label class="font-weight-bold"> Last Name </label>
                <input class="form-control" type="text" name="lname" required value="" id="lname" />
            </div>

            <div class="form-group ">
                <label class="font-weight-bold"> Email id </label>
                <input class="form-control" type="email" name="emailId" required value="" id="emailId" />
            </div>

            <div class="form-group ">
                <label class="font-weight-bold"> Password </label>
                <input class="form-control" type="password" name="password" value="" id="password" />
            </div>

            <div class="form-group ">
                <label class="font-weight-bold"> Confirm Password </label>
                <input class="form-control" type="password" name="cfmPassword" value="" id="cfmPassword" />
            </div>


            <div class="form-group ">
                <input class="form-control btn btn-dark" type="submit" name="submit" value="Submit" />
            </div>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script type="text/javascript">

    $("#SignUpForm").validate({
        rules: {
            password: {
                required: true,
                minlength: 6,
                maxlength: 10,

            },

            cfmPassword: {
                equalTo: "#password",
                minlength: 6,
                maxlength: 10
            }


        },
        messages: {
            password: {
                required: "the password is required"

            }
        }

    });
</script>


